#!/usr/bin/env bash
set -euo pipefail


if [ ! -d "/storage/emulated/0" ]; then
  termux-setup-storage
fi
# config (change paths if you want)
AUTOEXEC="/storage/emulated/0/Delta/Autoexecute"
WORKSPACE="/storage/emulated/0/Delta/Workspace"

mkdir -p "$AUTOEXEC" "$WORKSPACE"

# reconnect.txt config
cat <<'LUA' > "$AUTOEXEC/reconnect.txt"
loadstring(game:HttpGet('https://raw.githubusercontent.com/nullus7/reconnect/refs/heads/main/checkonline.lua'))()
wait(10)
loadstring(game:HttpGet('https://raw.githubusercontent.com/nullus7/reconnect/refs/heads/main/checkonline.lua'))()
LUA

